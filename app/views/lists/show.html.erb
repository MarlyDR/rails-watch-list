<div class="navbar-lewagon">
  <%= link_to 'My lists', root_path, class: "btn btn-light"  %>
  <%= link_to 'New list', new_list_path, class: "btn btn-light"  %>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<ul>
  <h2><% @list.movies.each do |movie| %></h2>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>


<div class="card-product">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
  <div class="card-product-infos">
    <h2> <%= movie.title %></h2>
    <p><%= movie.overview %></p>
    <p>rating: <%= movie.rating %></p>
    <%= movie.poster_url%>
  </div>
</div>


  <%= link_to "Delete movie", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-remove-link" %>
  <% end %>
</ul>

<%= link_to 'Add movie', new_list_bookmark_path(@list), class: 'btn btn-secondary' %>
