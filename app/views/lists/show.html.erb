<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>

<ul>
  <h2><% @list.movies.each do |movie| %></h2>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <li><%= movie.title %> <%= movie.rating %> </li>
  <%= link_to "Delete movie", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "card-remove-link" %>
  <% end %>
</ul>

<%= link_to 'Back to lists', lists_path, class: 'btn btn-primary' %>
<%= link_to 'Add movie', new_list_bookmark_path(@list), class: 'btn btn-dark' %>
